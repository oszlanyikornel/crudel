{
	"name": "crudel",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"version": "0.1.0",
	"license": "MIT",
	"author": "Oszlányi Kornél",
	"scripts": {
		"dev:docs": "yarn workspace @crudel/docs dev",
		"dev:client": "yarn workspace @crudel/client build:watch",
		"build": "yarn lerna run build --npm-client=yarn",
		"test": "yarn lerna run test --npm-client=yarn",
		"test:client": "yarn workspace @crudel/client test",
		"lint": "yarn lerna run lint --npm-client=yarn",
		"size": "yarn lerna run size-limit --npm-client=yarn"
	},
	"devDependencies": {
		"lerna": "^4.0.0"
	}
}
