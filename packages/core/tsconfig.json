{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["**/*.ts", "**/*.tsx", "*.ts", "*.tsx", "../../index.ts"],
  "exclude": ["node_modules"]
}
